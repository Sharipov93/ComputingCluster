<Window x:Class="ControllerNode.View.InformationMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControllerNode.View"
        mc:Ignorable="d"
        Title=""  Height="150" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False">
    <Border Width="auto" Height="auto" BorderBrush="{DynamicResource DictBorderBrush}" BorderThickness="1"
                CornerRadius="5" Background="#D7D9E5">
        <StackPanel>
            <StackPanel Background="#59676b" HorizontalAlignment="Stretch" Height="70">
                <TextBlock x:Name="exceptionTxt" Foreground="White" FontSize="13" Margin="0, 20, 0, 0" HorizontalAlignment="Center" />
            </StackPanel>
            <Button Content="Ок" MinWidth="80" IsDefault="True" 
                    HorizontalAlignment="Right" Margin="0, 30, 20, 10" Click="Button_Click_Ok"/>
            
        </StackPanel>
    </Border>
</Window>
