<Window x:Class="ControllerNode.View.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="160" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False">
    <Border Width="auto" Height="auto" BorderBrush="{DynamicResource DictBorderBrush}" BorderThickness="1"
                CornerRadius="5" Background="White">

        <StackPanel>
            <StackPanel Background="#59676b" Width="300" Height="80">
                <TextBlock VerticalAlignment="Center" Margin="0, 20, 0, 0" HorizontalAlignment="Center" Foreground="White" FontSize="16">Закрыть приложение?</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 20, 0, 0">
                <Button x:Name="okBtn" Content="Да" MinWidth="80" MaxHeight="30" Margin="0, 0, 10, 0" IsDefault="True" Click="OkBtn_Click"/>
                <Button x:Name="cancelBtn" Content="Нет" MinWidth="80" MaxHeight="30" IsCancel="True" Click="CancelBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
